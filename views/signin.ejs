<body>    
    <form method="post" action="/signin">
        <h2>Sign in to <span>AUCLINE</span></h2>
        <label for="username"><b>Username:</b></label>
        <input type="text" placeholder="Enter your username" name="username" required><br><br>
        <label for="password"><b>Password:</b></label>
        <input type="password" name="password" placeholder="Enter Password" id="password" required><br>
        <input type="checkbox" onclick="myFunction()">Show password &nbsp;&nbsp;&nbsp;
        <a href="/forgot" id="forget_pw">Forgot your password?</a><br><br>
        <button id="login_btn" onclick="">Login</button>
    </form>
    <script>
        function myFunction() {
            var x = document.getElementById("password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
